                                                <% if (user) {%><li><a href="deconnexion" class="">Se deconnecter</a></li><% } %> 
                                             </center>
									</ul>
			
                </div>
                    

                    <div id="userchange">
                            <center>
                                <legend><h3>Modifier mon compte</h3></legend>
                            </center>		
                                <div id="user-change"></div>
                            </div>
                    
                                    <div id="user-container">
                    
                                        <form method="POST" action="modif/<%= user._id %>" onsubmit="return validation()">
                                            <center>

                                            <fieldset>
                                            <table>	

                            
                                                <tr>
                                                    <td>						
                                                            <label><h4>Nom : </h4></label>
                                                            <td align="right">
                                                            <input type="text" name="name" placeholder="Nom" value="<%= user.name %>"/><br/>
                                                            <p></p>
                                                            </td>	
                                                    </td>
                                                </tr>
                                                
                                                <tr>	
                                                    <td>	
                                                            <label><h4>Prénom : </h4></label>
                                                            <td align="right">
                                                            <input type="text" name="surname" placeholder="Prénom" value="<%= user.surname %>"/><br/>
                                                            <p></p>
                                                            </td>
                                                    </td>
                                                </tr>
                                                <tr>	
                                                    <td>
                                                            <label><h4>Email : </h4></label>
                                                            <td align="right">
                                                            <input type="email" name="email" placeholder="Email" value="<%= user.email %>" /><br/>
                                                            <p></p>
                                                            </td>
                                                    </td>
                                                </tr>
                                                <tr>	
                                                    <td>
                                                            <label><h4>Mot de passe : </h4></label>
                                                            <td align="right">
                                                            <input type="password" name="password" placeholder="Mot de passe" value="<%= user.password %>"/><br/>
                                                            <p></p>
                                                            </td>
                                                    </td>
                                                </tr>
                    
                                                <tr>	
                                                    <td align="right"><br/>
                                                    <button type="submit" name="submit"><h5>Valider</h5></button>
                                                    <p></p>
                                                    </td>
                                                </tr>
                    
                                            </table>
                    
                                            </fieldset>
                    
                                            </center>     
                                            
                                            <script type="text/javascript">
						
                                                function validation(){
                                                alert('Votre compte a bien été modifié !');
                                                };

                                                
                        
                                            </script>

                                          
                                        </form>
                        
                                    </div>

